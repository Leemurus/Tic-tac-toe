<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" styleClass="body" stylesheets="@../css/start.css"
            xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="frontend.controllers.StartController">
   <Label layoutX="129.0" layoutY="14.0" prefHeight="106.0" prefWidth="368.0" styleClass="title"
          stylesheets="@../css/start.css" text="Tic-tac-toe">
      <font>
         <Font name="Daniel Bold" size="50.0"/>
      </font>
   </Label>
   <Button fx:id="startButton" defaultButton="true" layoutX="125.0" layoutY="312.0" mnemonicParsing="false"
           onMouseClicked="#clickedOnStartButton" prefHeight="0.0" prefWidth="151.0" styleClass="startButton"
           stylesheets="@../css/start.css" text="Start" textAlignment="CENTER">
      <font>
         <Font name="FreeMono Bold" size="29.0"/>
      </font>
   </Button>
   <Button fx:id="exitButton" cancelButton="true" layoutX="325.0" layoutY="312.0" mnemonicParsing="false"
           onMouseClicked="#clickedOnExitButton" prefHeight="0.0" prefWidth="151.0" styleClass="exitButton"
           stylesheets="@../css/start.css" text="Exit" textAlignment="CENTER">
      <font>
         <Font name="FreeMono Bold" size="29.0"/>
      </font>
   </Button>
   <TextField fx:id="input" layoutX="200.0" layoutY="184.0" promptText="3" styleClass="input"
              stylesheets="@../css/start.css"/>
   <Label layoutX="155.0" layoutY="128.0" prefHeight="56.0" prefWidth="290.0" styleClass="subtitle"
          stylesheets="@../css/start.css" text="Choose field size">
      <font>
         <Font name="Daniel Bold" size="50.0"/>
      </font>
   </Label>
</AnchorPane>
